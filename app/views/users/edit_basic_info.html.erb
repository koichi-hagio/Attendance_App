<% provide(:title, "Edit") %>
<% provide(:class_text, 'user--edit') %>
<% provide(:button_text, '編集') %>
<h1>基本情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
　  <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>

      <%= f.label :work_time, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :work_time, class: "form-control" %>

      <%= f.label :basic_time, class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :basic_time, class: "form-control" %>
  </div>
</div>